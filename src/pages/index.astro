---
// Data
import { caseStudies } from "../lib/data/site-data";

import Base from "../layouts/Base.astro";
---

<Base
  isHome
  pageTitle="OrcheWeb"
  pageDescription="A unique fixed monthly subscription service to cover all your web development needs. No hidden fees. Cancel anytime."
>
  <section class="bg-jungle-green">
    <div class="main-container">
      <div class="pt-16 pb-32 space-y-6">
        <h1 class="sm:w-10/12 text-light-cyan">
          Get your website done with less headache and more success.
        </h1>
        <p class="text-2xl sm:w-8/12 text-light-cyan">
          A unique fixed monthly subscription service to cover all your web
          development needs.
        </p>
        <p class="text-xl font-bold opacity-75 sm:w-8/12 text-light-cyan">
          No surprises, no hidden fees. Cancel anytime.
        </p>

        <a
          href="#pricing"
          class="action-default bg-light-cyan text-jungle-green shadow-default"
          >See Pricing</a
        >
      </div>
    </div>
  </section>

  <section class="py-16 pt-32 space-y-16 main-container" id="cases-studies">
    <h2>Take a loot at what we've been working on recently</h2>

    {
      caseStudies.map((caseStudy) => {
        return (
          <>
            <div class="flex flex-col shadow-xl lg:flex-row bg-light-cyan">
              <div>
                <img
                  src={caseStudy.content.featuredImage.filename}
                  alt={caseStudy.content.featuredImage.alt}
                  class="w-auto h-full"
                />
              </div>

              <div class="p-8 space-y-4 sm:p-12 basis-6/12">
                <h3 class="text-2xl sm:text-3xl">{caseStudy.content.title}</h3>
                <div set:html={caseStudy.content.description} />
                <a
                  href={caseStudy.content.websiteUrl.url}
                  class="flex text-lg font-bold link-default"
                  target="_blank"
                >
                  Check the website here &#8599;
                </a>
              </div>
            </div>
          </>
        );
      })
    }
  </section>
</Base>
